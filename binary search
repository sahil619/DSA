
#include<iostream>
#include<algorithm>
using namespace std;
int main(){
	int n=7;
	int a[n]={5,4,2,7,8,1,0};
	int target= 7;
	sort(a,a+n);
	int low=0,high=n-1;
	while(low<=high){
    int mid=high-low/2;
    if(a[mid]==target) {
    	cout<<mid;
         break;
     }
    else if(target>a[mid]) low = mid+1;
    else high = mid-1;
	}
    
}
